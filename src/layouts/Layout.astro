---
import HeaderLanding from '../components/HeaderLanding.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<HeaderLanding />
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
	html {
		font-family: "Roboto", serif;
		background: #050304;
		color: #f2f2f2;
	}
  .bg-ambientLight {
    background-image: radial-gradient(68.54% 68.72% at 55.02% 31.46%, hsla(0, 0%, 85%, .08) 0, hsla(0, 0%, 55%, .02) 50%, hsla(0, 0%, 45%, 0) 80%);
}
.bg-ambientLight3 {
    background-image: radial-gradient(50% 50% at 50% 50%, hsla(0, 0%, 85%, .04) 0, hsla(0, 0%, 45%, .02) 80%, transparent 100%);
}
.bg-ambientLight2 {
    background-image: radial-gradient(50% 50% at 50% 50%, hsla(0, 0%, 85%, .06) 0, hsla(0, 0%, 45%, .02) 80%, transparent 100%);
}

	.luz {
    background: linear-gradient(to right, #0096fa 35%, #004175 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }
  .iluminacion {
    position: relative;
    overflow: hidden;
  }
  .iluminacion::before {
    content: "";
    position: absolute;
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    background: var(--iluminacion);
    z-index: -1;
    filter: blur(10px);
    transform: translate(-50%, -50%);
    top: var(--y, 50%);
    left: var(--x, 50%);
    opacity: 0;
    transition:
      opacity 0.3s ease,
      transform 0.1s linear;
  }

  .iluminacion.active::before {
    opacity: 1;
  }

  .bgbefore{
        overflow: hidden;
        transform-style: preserve-3d;
        transition: transform 0.3s ease;
      }
      .bgbefore::before{
        content: "";
        z-index: -1;
        position: absolute;
        width: 10rem;
        height: 10rem;
        background: #036aa13f ;
        border-radius: 999px;
        filter: blur(50px);
        transform: translate(-50%, -50%);
    top: var(--y, 50%);
    left: var(--x, 50%);
    opacity: 0;
    transition:
      opacity 0.3s ease,
      transform 0.1s linear;
      }
      .bgbefore.active::before {
    opacity: 1;
  }
</style>
